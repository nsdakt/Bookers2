<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
  <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
  <%= f.submit "Update User" %>
<% end %>