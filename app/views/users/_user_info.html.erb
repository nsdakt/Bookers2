<h2>User info</h2>
<%= attachment_image_tag user, :image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <%= user.name %>
    </tr>
    <tr>
      <th>introduction</th>
      <%= user.introduction %>
    </tr>
  </tbody>
</table>
<% if user.id == current_user.id %>
    <p><%= link_to "useredit", edit_user_path(user) %></p>
  <% end %>
