<%= render 'users/user_info', user: @user %>

<%= render 'books/form', book: @book %>

<h2>Books</h2>
  <div>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>アイコン</td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>