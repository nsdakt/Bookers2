<main>
  <p id="notice"></p>
  <h2>User info</h2>

  <h2>New book</h2>
  <%= form_with model: @book, local:true do |f| %>
    <label>Title</label><br/>
    <%= f.text_field :title %><br/>
    <label>Opinion</label><br/>
    <%= f.text_area :opinion %><br/>
    <%= f.submit 'Create Book' %>
  <% end %>

  <h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    </tbody>
</table>
</main>