　<%= flash[:notice] %><!--新規投稿成功時のflash-->
　<div class="container">
　  <div class="row">
　    <div class="col-md-3">
      　<%= render 'users/user_info', user: @user %>
      　<%= render 'books/form', book: @book_new %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
               <%= attachment_image_tag @book.user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %><br/>
               <%= link_to @book.user.name, user_path(@book.user) %>
              </td>
              <td><%= link_to @book.title, @book %></td>
              <td><%= @book.body %></td>
              <%= render 'books/favorite', book: @book %>
              <td>コメント数：<%= @book.book_comments.count %></td>
              <% if @user.id == current_user.id %>
               <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
               <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger"  %></td>
              <% end %>
            </tr>
          </tbody>
        </table>

        <table class="table">
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td>
                 <%= attachment_image_tag book_comment.user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %><br/>
                 <%= link_to book_comment.user.name, user_path(book_comment.user) %>
                 <%= book_comment.comment %>
                </td>
                <% if book_comment.user.id == current_user.id %>
                 <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div>
          <%= form_with model:[@book, @book_comment], local: true do |f| %>
           <%= f.text_area :comment %>
           <%= f.submit "送信" %>
          <% end %>
        </div>

      </div>
    </div>
  </div>

