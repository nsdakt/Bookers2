<h1>Editing Book</h1>
 <% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

 <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

 <div class="field">
  <label for="book_title">Title</label><br/>
  <%= f.text_field :title %>
 </div>

 <div class="field">
  <label for="book_body">Body</label><br/>
  <%= f.text_area :opinion %>
 </div>

 <div class="action">
  <%= f.submit 'Update Book' %>
 </div>
 </br>
 <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>

 <% end %>
